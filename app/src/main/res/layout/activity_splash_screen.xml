    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/cloud"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:gravity="center"
        android:text="Daily Groceries"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/splashImg"
        app:layout_constraintEnd_toStartOf="@+id/splashImg"
        app:layout_constraintTop_toTopOf="@+id/splashImg" />

    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/delivery" />
</androidx.constraintlayout.widget.ConstraintLayout>